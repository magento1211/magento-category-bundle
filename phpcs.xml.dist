<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg value="nps"/>

    <file>src</file>
    <file>spec</file>
    <file>tests</file>
    <exclude-pattern>tests/var/*</exclude-pattern>
    <exclude-pattern>tests/TestKernel.php</exclude-pattern>

    <rule ref="Doctrine"/>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>spec/*</exclude-pattern>
    </rule>
</ruleset>
