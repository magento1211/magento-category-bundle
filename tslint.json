{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-classes-per-file": false,
        "no-var-requires": false,
        "no-namespace": false,
        "object-literal-shorthand": [true, "never"],
        "variable-name": {
            "options": [
                "allow-pascal-case"
            ]
        },
        "no-shadowed-variable": [
            true,
            {
                "temporalDeadZone": false
            }
        ]
    },
    "rulesDirectory": []
}
